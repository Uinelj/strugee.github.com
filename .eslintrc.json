{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "strict/es5",
    "rules": {
	"array-bracket-spacing": [
	    "error",
	    "never",
	    { "objectsInArrays": true, "arraysInArrays": true }
	],
	"comma-dangle": [
	    "error",
	    "never"
	],
        "no-console": "off",
	"no-extra-parens": "error",
	"no-mixed-spaces-and-tabs": [
	    "error",
	    "smart-tabs"
	],
	"no-unsafe-finally": "error",
	"no-use-before-define": [
	    "error",
	    { "functions": false }
	],
	"no-trailing-spaces": "error",
	"no-warning-comments": "warn",
	"id-length": "off",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
	"func-names": "off",
	"newline-after-var": [
	    "error",
	    "always"
	],
	"one-var": [
	    "off",
	    { "uninitialized": "never", "initialized": "always" }
	],
	"one-var-declaration-per-line": [
	    "off",
	    "initializations"
	],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
	"space-before-function-paren": [
	    "error",
	    "never"
	],
	"wrap-iife": [
	    "error",
	    "inside"
	]
    }
}
