extends ../includes/layout.jade

include ../includes/post-metadata.jade

block head
	title #{metadata.title} - strugee.net
	link(rel='pingback', href='https://webmention.io/strugee.net/xmlrpc')
	link(rel='webmention', href='https://webmention.io/strugee.net/webmention')
	script(src='/js/webmentions.js', type='text/javascript')

block content
	article.h-entry(itemscope, itemtype='http://schema.org/BlogPosting')
		h1.p-name= metadata.title

		+postMetadata(metadata.author, metadata.time, metadata.categories)
		.e-content!= text

	hr
	p#webmention-replies-header WebMention replies

	div#webmentions
	noscript
		p Couldn't load WebMentions because you turned your JavaScript off. Sorry about that!