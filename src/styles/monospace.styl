#container {
	max-width: 70em;
}

#container, body {
	background-color: inherit;
	font-family: monospace;
}

code, pre {
	background-color: inherit;
}

h1, h2, h3, h4, h5, h6 {
	font-size: 93%;
	margin: inherit;
	text-transform: uppercase;
}

ul {
	list-style: '* ';
}

a {
	// This doesn't actually work almost anywhere yet according to MDN
	// But eventually it will kick in, and it will be good.
	color: revert;
}

pre, code {
	border: none;
	margin: none;
	padding: none;
}

#navlabel {
	margin-left: -25px;
}

#toys {
	background-color: inherit;
	border: medium solid #50;
}

footer {
	margin-top: 50px;
	text-align: left;
}
